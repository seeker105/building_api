<div class="container">
  <div class="col-sm-12">
    <h1>Edit User</h1>
  </div>
  <div class="col-sm-6">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_area :email, class: "form-control" %>
      </div>
      <%= f.submit "Edit User", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
