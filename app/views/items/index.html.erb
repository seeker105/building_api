<div class="container">
  <div class="col-sm-12">
    <h1 class="pull-left"><%= @items.count %> Items</h1>
    <%= link_to "New Item", new_item_path, class: "btn btn-default pull-right" %>
  </div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
</div>
